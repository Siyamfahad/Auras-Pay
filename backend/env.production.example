# Production Environment Configuration
# Copy this to .env in production and replace placeholder values

# Database - Use PostgreSQL for production
DATABASE_URL="postgresql://auras_user:your_strong_password@localhost:5432/auras_pay?schema=public"

# JWT Secret - Generate a strong secret
JWT_SECRET="your-super-strong-jwt-secret-key-for-production-256-bits-long"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
HOST="0.0.0.0"
NODE_ENV="production"

# Your Domain Configuration
FRONTEND_URL="https://yourdomain.com"
API_URL="https://yourdomain.com/api"

# Solana Configuration - Use mainnet for production
SOLANA_NETWORK="mainnet-beta"
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

# Database Pool Settings for Production
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10 